JavaScriptimport { OpenAI } from 'openai';
import transcript from 'youtube-transcript';

const openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  const { url } = req.body;
  if (!url) return res.status(400).json({ error: 'Missing URL' });

  try {
    // Extract video ID
    const videoId = new URL(url).searchParams.get('v');
    if (!videoId) return res.status(400).json({ error: 'Invalid YouTube URL' });

    // Fetch transcript
    const transcriptData = await transcript.fetchTranscript(videoId);
    const fullTranscript = transcriptData.map(t => t.text).join(' ');

    // Generate with OpenAI (exact prompt like original)
    const prompt = `Generate a SEO-optimized blog post from this YouTube transcript: ${fullTranscript}. 
    Structure: Engaging intro with hook, 4-6 main sections with subheadings and bullet points, conclusion with CTA. 
    Tone: Casual and engaging. Include keywords like "YouTube to blog post". Length: 800-1200 words.`;

    const completion = await openai.chat.completions.create({
      model: 'gpt-4o-mini',
      messages: [
        { role: 'system', content: 'You are an expert blogger who repurposes video content into viral posts.' },
        { role: 'user', content: prompt }
      ],
      max_tokens: 1500,
      temperature: 0.7,
    });

    const generated = completion.choices[0].message.content;

    res.json({
      success: true,
      draft: generated,
      tips: 'Embed the video in your blog by pasting the URL. Add images for better SEO!'
    });
  } catch (error) {
    console.error(error);
    res.status(500).json({ error: 'Generation failed: ' + error.message });
  }
}
